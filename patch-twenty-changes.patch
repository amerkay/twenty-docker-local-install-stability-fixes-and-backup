+      jobName: ConnectedAccountAutoReconnectCronJob.name,
+      data: undefined,
+      options: {
+        repeat: {
+          pattern: CONNECTED_ACCOUNT_AUTO_RECONNECT_CRON_PATTERN,
+        },
+      },
+    });
+  }
+}
